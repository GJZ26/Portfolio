@import '../helpers/Variables.styl';

div.head {
    display: flex;
    align-items: center;
    gap: 15px;
    justify-content: center;

    div.user-image {
        size = 13.6rem;
        width: size;
        height: size;
        border-radius: 50%;
        background: var(--image-place-holder-bg);
        background: var(--image-place-holder-gr);
        display: inline-block;
    }

    div.head-content {
        h1 {
            H1();
            color: primary_color;
        }

        h2 {
            margin: -11px 0px 7px;
            H2();
            color: primary_color;
        }

        div.extra-info {
            span {
                Extract();
                color: primary_color;

                Dots(5px, 20px, 20.8px)
            }
        }
    }
}