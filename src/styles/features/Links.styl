@import '../helpers/Variables.styl';

div.links {
    margin-top: 35px;

    div.links-button {
        display: flex;
        flex-wrap: wrap;
        gap: 10px 20px;
        justify-content: center;

        a {
            Extract(primary_color);
            text-decoration: none;
            border: 1px solid secondary_color;
            padding: 5px 20px 5px 35px;

            &::before {
                content: '';
                display: block;
                position: absolute;
                No_Image(20px);
                transform: translate(-26px, 0px);
            }

            transition: box-shadow 150ms ease-out;

            &:hover {
                box-shadow: 0px 0px 0px 1px var(--secondary-color);
                transition: box-shadow 150ms ease-in;
            }
        }
    }

    div.cvs {
        margin-top: 26px;
        display: flex;
        flex-direction: column;
        align-items: center;

        a {
            text-align: center;
            text-decoration: none;

            &.main {
                Extract(primary_color);
                Down_Arrow(12px);
                margin-bottom: 5px;
            }

            &.second {
                Regular_P(third_color);
                Down_Arrow(11px);
            }
        }
    }
}