@import '../helpers/Variables.styl';

div.projects {
    @media (max-width: 500px) {
        div.project-card {
            flex-direction: column;
            gap: 0 !important;
            margin-bottom: 50px !important;
            border: 1px solid secondary_color;

            span {
                padding: 3px 6px;
                border-radius: 0px 0px 10px 0px;
                position: absolute;
                background-color: background_color;
                text-align: left !important;
            }

            div.thumb {
                width: 100% !important;
            }

            div.info {
                padding: 20px;

                h3 {
                    margin-bottom: 10px !important;
                }
            }
        }
    }

    margin-top: 25px;

    div.project-card {
        &:not(:last-child) {
            margin-bottom: 25px;
        }

        display: flex;
        gap: 15px;

        span {
            width: 25px;
            flex-shrink: 0;
            Extra_Small(secondary_color);
        }

        div.thumb {
            flex-shrink: 0;
            No_Image(95px);
            Image_Background(true);
            display: flex;
            justify-content: center;
            align-items: center;

            &.placeholder {
                &::after {
                    content: '</>';
                    H1(white, _bold, monospace);
                    text-align: center;
                }
            }
        }

        div.info {
            flex-grow: 0;

            h3 {
                margin: 0;

                a {
                    color: primary_color;
                    text-decoration: none;
                    Arrow(10px);
                }
            }

            p {
                Small_P(text_color);
            }
        }
    }
}
