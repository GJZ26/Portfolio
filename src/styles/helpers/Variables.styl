/* --- Variables globales --- */
font_family = var(--font-family);
background_color = var(--background-color);
primary_color = var(--primary-color);
text_color = var(--text-color);
secondary_color = var(--secondary-color);
third_color = var(--third-color);
/* --- Variables Internas --- */
_bold = 700;
_semibold = 600;
_medium = 500;
_regular = 400;
_light = 300;

/* --- Funciones internas --- */
custom_font(size = 1, weight = normal, font_color, font_family = var(--font-family)) {
    font-family: font_family;
    font-size: unit(size, rem);
    font-weight: weight;
    color: font_color;
}

/* ---  Tipografias --- */
H1(_color = var(--text-color)) {
    custom_font(3.2, _bold, _color);
}

H2(_color = var(--text-color)) {
    custom_font(2, _semibold, _color);
}

H3(_color = var(--text-color)) {
    custom_font(1.6, _semibold, _color);
}

Extract(_color = var(--text-color)) {
    custom_font(1.4, _regular, _color);
}

Regular_P(_color = var(--text-color)) {
    custom_font(1.3, _regular, _color);
}

Small_P(_color = var(--text-color)) {
    custom_font(1.2, _regular, _color);
}

Dates(_color = var(--text-color)) {
    custom_font(1.2, _light, _color);
}

Extra_Small(_color = var(--text-color)) {
    custom_font(1, _regular, _color);
}