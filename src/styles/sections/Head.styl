@import '../helpers/Variables.styl';

div.head {
    display: flex;
    align-items: center;
    gap: 15px;
    justify-content: center;

    div.user-image {
        size = 13.6rem;
        width: size;
        height: size;
        border-radius: 50%;
        background: var(--image-place-holder-bg);
        background: var(--image-place-holder-gr);
        display: inline-block;
    }

    div.head-content {
        h1 {
            H1();
            color: primary_color;
        }

        h2 {
            margin: -11px 0px 7px;
            H2();
            color: primary_color;
        }

        div.extra-info {
            span {
                Extract();
                color: primary_color;

                &:not(:last-child) {
                    _margin = 24px;
                    _height = 19.2px;
                    margin-right: _margin;

                    &:after {
                        size = 5px;
                        position: absolute;
                        content: '';
                        display: inline-block;
                        width: size;
                        height: size;
                        background-color: primary_color;
                        border-radius: 50%;
                        margin: (_height / 2) - (size / 2) 0px 0px (_margin / 2) - (size / 2);
                    }
                }
            }
        }
    }
}